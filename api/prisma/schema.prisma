generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Clinic {
  id    Int     @id @default(autoincrement())
  name  String
  specialty String
  status String @default("Closed")
  queueEntries QueueEntry[]
  doctors Doctor[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  location String
}

model QueueEntry {
  id        Int     @id @default(autoincrement())
  patientFields Json
  clinic    Clinic    @relation(fields: [clinicId], references: [id])
  clinicId  Int
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  status String @default("Awaiting arrival")
}

model Doctor {
  id        Int     @id @default(autoincrement())
  name String
  specialty String
  bio String
  clinic    Clinic    @relation(fields: [clinicId], references: [id])
  clinicId  Int
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
}